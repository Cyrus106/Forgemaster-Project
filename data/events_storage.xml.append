<FTL> <!--STORAGE CHECK APPENDS TO CHECK FOR PLAYER COMPONENTS, AND ADD RECIPE LIST-->
  <mod:findName type = "event" name = "STORAGE_CHECK_REAL">

    <!-- Forge requirements check. if none in the list check out, shows recipe list
    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\
    max_group works differently here than vanilla; it will always keep the first event whose req is satisfied and discard the rest.
    So whichever is met first, shows
    \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\  -->

    <!-- LASER WEAPON INVENTORY CHECK! -->
    <mod-append:choice req="FM_LASER_FORGE_LIST_STORAGE"  max_group="600" hidden="true">
      <text>Weapon craft available. [Laser]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>



    <!-- ION/ENERGY WEAPON INVENTORY CHECK! -->
    <mod-append:choice req="FM_ION_FORGE_LIST_STORAGE"  max_group="600" blue="true" hidden="true">
      <text>Weapon craft available. [Ion/Energy]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>



    <!-- BEAM WEAPON INVENTORY CHECK! -->
    <mod-append:choice req="FM_BEAM_FORGE_LIST_STORAGE"  max_group="600" hidden="true">
      <text>Weapon craft available. [Beam]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>



    <!--PINPOINT WEAPON INVENTORY CHECK!-->

    <mod-append:choice req="FM_PINPOINT_FORGE_LIST_STORAGE"  max_group="600" hidden="true">
      <text>Weapon craft available. [Pinpoint]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>



    <!-- FLAK WEAPON INVENTORY CHECK! -->
    <mod-append:choice req="FM_FLAK_FORGE_LIST_STORAGE"  max_group="600" hidden="true">
      <text>Weapon craft available. [Flak]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>




    <!-- EXPLOSIVE WEAPON INVENTORY CHECK! -->

    <mod-append:choice req="FM_EXPLOSIVE_FORGE_LIST_STORAGE"   max_group="600" hidden="true">
      <text>Weapon craft available. [Explosives]</text>
      <event load="STORAGE_CHECK_CREATE"/>
    </mod-append:choice>





    <!-- ORGANIC WEAPON INVENTORY CHECK! -->
    <!-- BASILISK SUB-LIST -->
