<FTL><!--Inferno-Core-->
	<mod:findName type="event" name="START_BEACON_REAL">
		<mod-append:triggeredEvent name="FMCORE_ONJUMP" event="FMCORE_ONJUMP">
			<jumps amount="1" type="0"/>
		</mod-append:triggeredEvent>
		<mod-append:triggeredEvent name="FMCORE_ONDAMAGE" event="FMCORE_ONDAMAGE">
			<playerDamage amount="1" countRepairs="false"/>
		</mod-append:triggeredEvent>
		<mod-append:triggeredEvent name="FMCORE_ONCREWZERO" event="FMCORE_ONCREWZERO">
			<enemyCrew amount="0" includeClonebay="true"/><!--Triggers when enemy has no crew, can be used for CK/autoship-specific things that can be checked in lua, may have to implement queueEvent for when the ship CHANGES to an auto so it checks after that, depending on order of events-->
		</mod-append:triggeredEvent>
	</mod:findName>

	<event name="ADDON_FMCORE_INFO">
		<text id="info_addon_fmcore"/>
    <choice>
      <text id="continue"/>
      <event/>
    </choice>
    <choice req="fmcore_augbox_active" lvl="0" max_lvl="0"><!--placeholder-->
      <text>Enable Augment Stat Screen</text>
      <event>
        <variable name="fmcore_augbox_active" op="set" val="1"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
    <choice req="fmcore_augbox_active"><!--placeholder-->
      <text>Disable Augment Stat Screen</text>
      <event>
        <variable name="fmcore_augbox_active" op="set" val="0"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
    <choice req="fmcore_augbox_invert" lvl="0" max_lvl="0">
      <text>Enable Inverted Enabledness of Augment Stat Screen</text>
      <event>
        <variable name="fmcore_augbox_invert" op="set" val="1"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
    <choice req="fmcore_augbox_invert">
      <text>Disable Inverted Enabledness of Augment Stat Screen</text>
      <event>
        <variable name="fmcore_augbox_invert" op="set" val="0"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
    <choice req="fmcore_buttons_visible" lvl="0" max_lvl="0"><!--placeholder-->
      <text>Show addon info buttons</text>
      <event>
        <variable name="fmcore_buttons_visible" op="set" val="1"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
    <choice req="fmcore_buttons_visible"><!--placeholder-->
      <text>Hide addon info buttons</text>
      <event>
        <variable name="fmcore_buttons_visible" op="set" val="0"/>
        <queueEvent>ADDON_FMCORE_INFO</queueEvent>
      </event>
    </choice>
	</event>
	<event name="ADDON_FORGEMASTER_INFO">
		<text id="info_addon_forgmaster"/>
    <choice>
      <text id="continue"/>
      <event/>
    </choice>
    <choice req="unique_leah"><!--placeholder-->
      <text>Check Crafting recipes</text>
      <event>
        <loadEvent>FM_CRAFT_INFO</loadEvent>
      </event>
    </choice>
	</event>
	<event name="ADDON_GB_INFO">
